<div class="page-header">
  <h1>
    Enrollments
    <a href="/enrollments/new" class="btn btn-lg btn-success">New Enrollment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Participation</th>
        <th>Poet</th>
        <th>Actions</th>
      </tr>

      <% @enrollments.each do |enrollment| %>
      <tr>
        <td>
          <% if enrollment.participation.present? %>
            <a href="/participations/<%= enrollment.participation.id %>">
              <%= enrollment.participation.team_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if enrollment.poet.present? %>
            <a href="/poets/<%= enrollment.poet.id %>">
              <%= enrollment.poet.first_name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/enrollments/<%= enrollment.id %>" class="btn btn-primary">Show</a>
          <a href="/enrollments/<%= enrollment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_enrollment/<%= enrollment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @enrollments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
