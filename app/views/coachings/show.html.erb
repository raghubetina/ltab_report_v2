<div class="page-header">
  <h3>Coaching #<%= @coaching.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Team</dt>
      <dd>
        <% if @coaching.team.present? %>
          <a href="/teams/<%= @coaching.team_id %>">
            <%= @coaching.team.organization_name %>
          </a>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @coaching.user.present? %>
          <a href="/users/<%= @coaching.user_id %>">
            <%= @coaching.user.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/coachings" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @coaching.user %>
        <a href="/coachings/<%= @coaching.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_coaching/<%= @coaching.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
