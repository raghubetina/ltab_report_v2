<div class="page-header">
  <h3>Deduction #<%= @deduction.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Poem</dt>
      <dd>
        <% if @deduction.poem.present? %>
          <a href="/poems/<%= @deduction.poem_id %>">
            <%= @deduction.poem.round_id %>
          </a>
        <% end %>
      </dd>

      <dt>Penalty</dt>
      <dd>
        <% if @deduction.penalty.present? %>
          <a href="/penalties/<%= @deduction.penalty_id %>">
            <%= @deduction.penalty.title %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/deductions" class="btn btn-primary">
        Back
      </a>
      <a href="/deductions/<%= @deduction.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_deduction/<%= @deduction.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
