<div class="page-header">
  <h1>
    Competitions
    <a href="/competitions/new" class="btn btn-lg btn-success">New Competition</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @competitions.each do |competition| %>
      <tr>
        <td><%= competition.name %></td>
        <td>
          <a href="/competitions/<%= competition.id %>" class="btn btn-primary">Show</a>
          <a href="/competitions/<%= competition.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_competition/<%= competition.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
