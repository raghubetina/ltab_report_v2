<!-- Validation failure messages -->
<% if @enrollment.errors.any? %>
  <% @enrollment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Enrollment #<%= @enrollment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_enrollment/<%= @enrollment.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for participation_id -->
      <div class="form-group">
        <label for="participation_id" class="control-label">
          Participation
        </label>

        <input type="text" id="participation_id" name="participation_id" placeholder="Participation" class="form-control" value="<%= @enrollment.participation_id %>">
      </div>

      <!-- Label and input for poet_id -->
      <div class="form-group">
        <label for="poet_id" class="control-label">
          Poet
        </label>

        <input type="text" id="poet_id" name="poet_id" placeholder="Poet" class="form-control" value="<%= @enrollment.poet_id %>">
      </div>

      <button class="btn btn-warning">
        Update Enrollment
      </button>
      or
      <a href="/enrollments/<%= @enrollment.id %>">Cancel</a>
    </form>
  </div>
</div>
