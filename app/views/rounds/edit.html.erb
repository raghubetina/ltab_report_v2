<!-- Validation failure messages -->
<% if @round.errors.any? %>
  <% @round.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Round #<%= @round.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_round/<%= @round.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for bout_id -->
      <div class="form-group">
        <label for="bout_id" class="control-label">
          Bout
        </label>

        <input type="text" id="bout_id" name="bout_id" placeholder="Bout" class="form-control" value="<%= @round.bout_id %>">
      </div>

      <!-- Label and input for number -->
      <div class="form-group">
        <label for="number" class="control-label">
          Number
        </label>

        <input type="text" id="number" name="number" placeholder="Number" class="form-control" value="<%= @round.number %>">
      </div>

      <button class="btn btn-warning">
        Update Round
      </button>
      or
      <a href="/rounds/<%= @round.id %>">Cancel</a>
    </form>
  </div>
</div>
