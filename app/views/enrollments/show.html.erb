<div class="page-header">
  <h3>Enrollment #<%= @enrollment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Participation</dt>
      <dd>
        <% if @enrollment.participation.present? %>
          <a href="/participations/<%= @enrollment.participation_id %>">
            <%= @enrollment.participation.team_id %>
          </a>
        <% end %>
      </dd>

      <dt>Poet</dt>
      <dd>
        <% if @enrollment.poet.present? %>
          <a href="/poets/<%= @enrollment.poet_id %>">
            <%= @enrollment.poet.first_name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/enrollments" class="btn btn-primary">
        Back
      </a>
      <a href="/enrollments/<%= @enrollment.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_enrollment/<%= @enrollment.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
