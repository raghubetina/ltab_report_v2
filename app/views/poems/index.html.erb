<div class="page-header">
  <h1>
    Poems
    <a href="/poems/new" class="btn btn-lg btn-success">New Poem</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Round</th>
        <th>Poet</th>
        <th>Minutes</th>
        <th>Seconds</th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>

      <% @poems.each do |poem| %>
      <tr>
        <td><%= poem.round_id %></td>
        <td><%= poem.poet_id %></td>
        <td><%= poem.minutes %></td>
        <td><%= poem.seconds %></td>
        <td><%= poem.notes %></td>
        <td>
          <a href="/poems/<%= poem.id %>" class="btn btn-primary">Show</a>
          <a href="/poems/<%= poem.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_poem/<%= poem.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
