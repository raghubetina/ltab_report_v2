<div class="page-header">
  <h1>
    Deductions
    <a href="/deductions/new" class="btn btn-lg btn-success">New Deduction</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "deductions_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :penalty_title_cont, "Penalty title contains" %>
      <%= f.text_field :penalty_title_cont, :class => "form-control", :placeholder => "Penalty title contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/deductions" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#deductions_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Poem</th>
        <th>Penalty</th>
        <th>Actions</th>
      </tr>

      <% @deductions.each do |deduction| %>
      <tr>
        <td>
          <% if deduction.poem.present? %>
            <a href="/poems/<%= deduction.poem.id %>">
              <%= deduction.poem.round_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if deduction.penalty.present? %>
            <a href="/penalties/<%= deduction.penalty.id %>">
              <%= deduction.penalty.title %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/deductions/<%= deduction.id %>" class="btn btn-primary">Show</a>
          <a href="/deductions/<%= deduction.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_deduction/<%= deduction.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @deductions, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
